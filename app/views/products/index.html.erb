<p id="notice"><%= notice %></p>

<div class="container">
  <div class="index-width">
    <h1 class="title-one">Menu</h1>

    <%= link_to 'Register New Product', new_product_path, class: "btn btn-default"%>
      
    <table class="table">
      <thead>
        <tr class="font-one">
          <th>Products</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class="font-two"><%= product.name %></td>        
            <td class="font-two"><%= link_to 'Edit', edit_product_path(product) %></td>
            <td class="font-two"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="link-back">
      <%= link_to 'Place a order', root_path %>    
    </div>
  </div>
</div>