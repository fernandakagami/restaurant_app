<%= form_with(model: product, local: true) do |form| %>
  
  <div class="field">
    <%= form.label :name, class: "label-one" %>
    <%= form.text_field :name, id: :product_name, class: "form-control" %>
  </div>

  <div class="actions">    
      <%= form.submit :Submit, class: "btn btn-lg btn-default btn-block active" %>
  </div>

  <% if @product.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@product.errors.count, "error") %>.
      </div>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>      
    </div>
  <% end %>

<% end %>
