<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :table, class: "label-one" %>
    <%= form.text_field :table, id: :order_table, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :product_id, class: "label-one" %>
    <%= form.collection_select(:product_id, @product_options_for_select, :id, :name, {}, {class: "form-control"}) %>    
  </div>

  <div class="field">
    <%= form.label :quantity, class: "label-one" %>
    <%= form.number_field :quantity, id: :order_quantity, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
